<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/home_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/home_relative_padding">

            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/home_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:contentDescription="@string/home_image_view_description" />

            </LinearLayout>

            <TextView
                android:id="@+id/home_text1"
                android:layout_below="@id/LL"
                android:padding="@dimen/home_text1_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_text1"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <view
                android:id="@+id/seperator"
                android:layout_below="@id/home_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/seperator"/>

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/seperator"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/home_text2_padding"
                    android:textColor="@color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="@string/home_text2"/>

                <TextView
                    android:id="@+id/home_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/home_text2_padding"
                    android:text="@string/home_text3"
                    android:textColor="@color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/home_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/home_text2_padding"
                    android:textColor="@color/black"
                    android:text="@string/home_text4"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
</LinearLayout>